@model PBL3.Models.Entities.Account

@{
    ViewData["Title"] = "Xoá tài khoản";
}

<h3>Bạn chắc chắn muốn xoá tài khoản sau?
    Xoá tài khoản bao gồm cả thông tin đăng nhập của tài khoản này.
</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cccd)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cccd)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AccName" />
        <input type="submit" value="Xác nhận xoá" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại</a>
    </form>
</div>
