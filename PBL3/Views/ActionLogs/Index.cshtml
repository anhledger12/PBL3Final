@using PBL3.Models.Entities;
@model IEnumerable<PBL3.Models.Entities.ActionLog>

@{
    ViewData["Title"] = "Index";
}

@if (ViewBag.AccName == "")
{
    <h3 class="text-uppercase p-2 text-center">Lịch sử hoạt động hệ thống</h3>
}
else
{
    <h3 class="text-uppercase p-2 text-center">Lịch sử hoạt động của tài khoản @ViewBag.AccName</h3>
}

<div class="row">
    <div class="col-1"></div>
    <div class="col-10">
        <table class="table table-borderless">
            <thead class="thead-dark text-dark">
                <tr>
                    <th>
                        Thời gian
                    </th>
                    <th>
                        Chi tiết
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (ActionLog item in Model)
                {
                    <tr>
                        <td>
                            @item.Time
                        </td>
                        <td>
                            @item.Content
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.Partial("Paging")
    </div>
    <div class="col-1"></div>
</div>
