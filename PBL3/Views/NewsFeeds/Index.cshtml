@model IEnumerable<PBL3.Models.Entities.NewsFeed>

@{
    ViewData["Title"] = "Bài đăng";
}

<h1>Thông tin bài đăng</h1>

<a asp-action="Create" class="btn btn-success btn-icon-split ml-2">
    <span class="icon text-white-50">
        <i class="fas fa-plus"></i>
    </span>
    <span class="text">Tạo bài đăng mới</span>
</a>
<br />
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Nội dung
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            var html = Markdig.Markdown.ToHtml(item.Content);
            <tr>
            <div class = "card md-4">

            <div class = "row">
                <div class = "col-md-9 ml-3 mt-3">
                   @Html.Raw(html)
                </div>
                <div class = "col-md-2 ml-5">
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square fa-2x"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill fa-2x"></i></a>
                </div>
            </div>
            </div>
            <hr>
        </tr>
}
    </tbody>
</table>
<!--Page-->
@Html.Partial("Paging")