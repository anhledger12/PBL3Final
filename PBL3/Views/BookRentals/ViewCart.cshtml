@{
    ViewData["Title"] = "Giỏ hàng";
    var bookRent = Model.Where(p => p.bookRental.StateSend == false)
                        .Select(p => new { p.bookRental.Id }).FirstOrDefault();
}
@if (Model.Count() != 0)
{
    @model IEnumerable<PBL3.Models.RentModel>
<table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.title.IdTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.title.NameBook)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.title.IdTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.title.NameBook)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.title.IdTitle">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.title.IdTitle">Details</a> |
                        <a asp-controller = "RentBook" asp-action="Delete" asp-route-id="@item.title.IdTitle">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @*<input class = "btn-style" type="submit" value="Filter"/>*@
    <div class="form-group mt-3">
        <a class="btn btn-outline-secondary ms-5" asp-controller="RentBook" asp-action="SendRent">Submit</a>
    </div>
}
else
{
    <h1 class="display-4">Bạn không có đơn mượn nào chưa gửi</h1>
    <a asp-controller="Home" asp-action="Index">Trở về trang chủ</a>
    }