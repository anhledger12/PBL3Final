@{
    ViewData["Title"] = "Giỏ hàng"; 
}

@model IEnumerable<PBL3.Models.Entities.Title>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameBook)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameBook)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdTitle">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdTitle">Details</a> |
                    <a asp-controller = "RentBook" asp-action="Delete" asp-route-id="@item.IdTitle">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

