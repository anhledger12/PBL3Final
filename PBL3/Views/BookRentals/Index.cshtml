@using PBL3.Models.Entities
@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách các đơn mượn của hệ thống</h1>

<ul class="nav nav-pills">
    <li class="nav-item ">
        <a class="nav-link active rounded-0" id="Pending" data-toggle="pill" href="#Pending-Table" onclick="On1()">Chờ phê duyệt</a>
    </li>
    <li class="nav-item">
        <a class="nav-link rounded-0" id="WaitingTake" data-toggle="pill" href="#WaitingTake-Table" onclick="On2()">Đang chờ lấy</a>
    </li>
    <li class="nav-item">
        <a class="nav-link rounded-0" id="WaitingReturn" data-toggle="pill" href="#WaitingReturn-Table" onclick="On3()">Đang diễn ra</a>
    </li>
</ul>

<div class="tab-content">

    <div class="tab-pane container active p-0" id="Pending-Table">
        <h5 class="text-uppercase p-2 text-center">Danh sách chờ duyệt</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>Mã đơn mượn</th>
                    <th>Người gửi</th>
                    <th>Thời gian gửi</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (BookRental bookRental in ViewBag.Pending)
                {
                    <tr>
                        <td>@bookRental.Id</td>
                        <td>@bookRental.AccSending</td>
                        <td>@bookRental.TimeCreate</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@bookRental.Id" asp-route-type="1">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="tab-pane container fade p-0" id="WaitingTake-Table">
        <h5 class="text-uppercase p-2 text-center">Danh sách chờ lấy đơn</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>Mã đơn mượn</th>
                    <th>Người gửi</th>
                    <th>Người phê duyệt</th>
                    <th>Thời gian duyệt</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (BookRental bookRental in ViewBag.WaitingTake)
                {
                    <tr>
                        <td>@bookRental.Id</td>
                        <td>@bookRental.AccSending</td>
                        <td>@bookRental.AccApprove</td>
                        <td>@bookRental.TimeApprove</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@bookRental.Id" asp-route-type="2">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="tab-pane container fade p-0" id="WaitingReturn-Table">
        <h5 class="text-uppercase p-2 text-center">Danh sách đơn đang diễn ra</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>Mã đơn mượn</th>
                    <th>Người gửi</th>
                    <th>Người phê duyệt</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (BookRental bookRental in ViewBag.WaitingReturn)
                {
                    <tr>
                        <td>@bookRental.Id</td>
                        <td>@bookRental.AccSending</td>
                        <td>@bookRental.AccApprove</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@bookRental.Id" asp-route-type="3">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>