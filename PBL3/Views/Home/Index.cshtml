@model IEnumerable<PBL3.Models.Entities.Title>
@{
    ViewData["Title"] = "Home Page";
}
<p>@User.Identity.IsAuthenticated</p>
<div class="text-center">
    <h1 class="display-4">Still debugging</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">Web apps with ASP.NET Core</a>.</p>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PBL3</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="AccountLogins" asp-action="Index">Account Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Accounts" asp-action="Index">Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="ActionLogs" asp-action="Index">Action Logs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="BookRentals" asp-action="Index">Book Rentals</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="BookRentDetails" asp-action="Index">Rent Detail</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Index">Library</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Hashtags" asp-action="Index">Tag list</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Notificates" asp-action="Index">Notification</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Republishes" asp-action="Index">Republish</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>
<p>
    <a asp-controller = "Home" asp-action="Create">Create New</a>
</p>
<form asp-controller="Home" asp-action="Index" method = "get">
    <p>
        Title: <input type="text" name="name" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameBook)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameWriter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameBookshelf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRepublishNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameBook)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameWriter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameBookshelf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdRepublishNavigation.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdTitle">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdTitle">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdTitle">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

