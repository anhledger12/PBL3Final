@model PBL3.Models.Entities.Title

@{
    ViewData["Title"] = "Details";
}
@section scripts{
    <script>
        $(function () {
            $('#AlertBox').removeClass('hide');
            $('#AlertBox').delay(2000).slideUp(500);
        });

    </script>
}

<h1>Thông tin chi tiết đầu sách</h1>

@if (ViewData["AlertMessage"] != null)
{
    <div id="AlertBox" class="alert @ViewData["AlertType"] hide" role="alert">
        @ViewData["AlertMessage"]
    </div>
}

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameBook)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameBook)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameWriter)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameWriter)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseYear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Publisher)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameBookshelf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameBookshelf)
        </dd>
    </dl>
</div>
<div>
    @if (!User.IsInRole("User") && User.Identity.IsAuthenticated)
    {
        <a asp-action="Edit" asp-route-id="@Model.IdTitle">Edit</a>
    } else
    {
        <a asp-action="AddToRental" asp-route-id="@Model.IdTitle">Thêm vào đơn mượn</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
