@model PBL3.Data.ViewModel.ChangePasswordVM;

@{ 
    ViewData["Title"] = "Change Password";
}


<div class="row">
    <div class="col-md-6 offset-3">
        <div class = "card mb-4">
        <div class = "text-center mt-5 mb-5">            
            <h2>Thay đổi mật khẩu</h2>
        </div>


        @if (TempData["Error"] != null)
        {
                        <div class="col-md-12 alert alert-danger">
                            <span><b>Sorry!</b> - @TempData["Error"] </span>
                        </div>
        }

        <div class="row mb-5">
            <div class="col-md-8 offset-2">
                <form asp-action="ChangePassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Mật khẩu cũ</label>
                        <input asp-for="OldPassword" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Mật khẩu mới</label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nhập lại mật khẩu mới</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <input class="btn btn-outline-success float-right" type="submit" value="Lưu thay đổi" />
                        <a class="btn btn-outline-secondary ms-5" asp-controller="Account" asp-action="Detail" asp-route-id ="@ViewBag.id" >Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>