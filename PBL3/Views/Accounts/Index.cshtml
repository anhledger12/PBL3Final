@model IEnumerable<PBL3.Models.Entities.Account>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mssv)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Mssv)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AccName">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AccName">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AccName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div >
    @if (ViewBag.PageCount <= 5)
    {
        if (ViewBag.CurrentPage != 1)// Nếu như trang đầu
        {
            <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage-1)">Prev</a>
        }
        for (int i = 1; i <= ViewBag.PageCount; i++)
        {
            <a asp-action="Index" asp-route-page="@i">@i</a>
        }
        if (ViewBag.CurrentPage != ViewBag.PageCount)//Nếu như trang cuối
        {
            <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage+1)">Next</a>
        }
    }
    else
    {
        if (ViewBag.CurrentPage != 1)// Nếu như kp trang đầu
        {
            <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage-1)">Prev</a>
        }

        if (ViewBag.CurrentPage == 1)
        {
            <a class="text-primary">1</a>
            <a asp-action="Index" asp-route-page="2">2</a>
            <a>...</a>
            <a asp-action="Index" asp-route-page="@(ViewBag.PageCount-1)">@(ViewBag.PageCount - 1)</a>
            <a asp-action="Index" asp-route-page="@ViewBag.PageCount">@ViewBag.PageCount</a>
        }
        else if (ViewBag.CurrentPage == ViewBag.PageCount)
        {
            <a asp-action="Index" asp-route-page="1">1</a>
            <a asp-action="Index" asp-route-page="2">2</a>
            <a>...</a>
            <a asp-action="Index" asp-route-page="@(ViewBag.PageCount-1)">@(ViewBag.PageCount - 1)</a>
            <a class="text-primary">@ViewBag.PageCount</a>
        }
        else if (ViewBag.CurrentPage == 2)
        {
            <a asp-action="Index" asp-route-page="1">1</a>
            <a class="text-primary">2</a>
            <a asp-action="Index" asp-route-page="3">3</a>
            <a>...</a>
            <a asp-action="Index" asp-route-page="@(ViewBag.PageCount-1)">@(ViewBag.PageCount - 1)</a>
            <a asp-action="Index" asp-route-page="@ViewBag.PageCount">@ViewBag.PageCount</a>
        }
        else if (ViewBag.CurrentPage == ViewBag.PageCount - 1)
        {
            <a asp-action="Index" asp-route-page="1">1</a>
            <a asp-action="Index" asp-route-page="2">2</a>
            <a>...</a>
            <a asp-action="Index" asp-route-page="@(ViewBag.PageCount-2)">@(ViewBag.PageCount - 2)</a>
            <a class="text-primary">@(ViewBag.PageCount - 1)</a>
            <a asp-action="Index" asp-route-page="@ViewBag.PageCount">@ViewBag.PageCount</a>
        }
        else
        {
            <a asp-action="Index" asp-route-page="1">1</a>
            <a>...</a>
            <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage-1)">@(ViewBag.CurrentPage - 1)</a>
            <a class="text-primary">@(ViewBag.CurrentPage)</a>
            <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage-1)">@(ViewBag.CurrentPage + 1)</a>
            <a>...</a>
            <a asp-action="Index" asp-route-page="@ViewBag.PageCount">@ViewBag.PageCount</a>
        }
        if (ViewBag.CurrentPage != ViewBag.PageCount)//Nếu như kp trang cuối
        {
            <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage+1)">Next</a>
        }
    }

</div>