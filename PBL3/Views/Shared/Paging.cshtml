<div class="partial-content ml-5">
    @if (ViewBag.PageCount <= 5)
    {
        if (ViewBag.CurrentPage != 1)// Nếu như trang đầu
        {
            <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage-1)">
                <i class="bi bi-arrow-left-circle-fill"></i>
            </a>
        }
        for (int i = 1; i <= ViewBag.PageCount; i++)
        {
            if (ViewBag.CurrentPage != i)
            {
                <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="@i">@i</a>
            }
            else
            {
                <a class="btn btn-primary btn-sm" >@i</a>
            }
        }
        if (ViewBag.CurrentPage != ViewBag.PageCount)//Nếu như trang cuối
        {
            <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage+1)">
                <i class="bi bi-arrow-right-circle-fill"></i>
            </a>
        }
    }
    else
    {
        if (ViewBag.CurrentPage != 1)// Nếu như kp trang đầu
        {
            <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage-1)">
                <i class="bi bi-arrow-left-circle-fill"></i>
            </a>
        }

        if (ViewBag.CurrentPage == 1)
        {
            <a class="btn btn-primary btn-sm">1</a>
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="2">2</a>
            <a>...</a>
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="@(ViewBag.PageCount-1)">@(ViewBag.PageCount - 1)</a>
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="@ViewBag.PageCount">@ViewBag.PageCount</a>
        }
        else if (ViewBag.CurrentPage == ViewBag.PageCount)
        {
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="1">1</a>
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="2">2</a>
            <a>...</a>
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="@(ViewBag.PageCount-1)">@(ViewBag.PageCount - 1)</a>
            <a class="btn btn-primary btn-sm">@ViewBag.PageCount</a>
        }
        else if (ViewBag.CurrentPage == 2)
        {
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="1">1</a>
            <a class="btn btn-primary btn-sm">2</a>
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="3">3</a>
            <a>...</a>
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="@(ViewBag.PageCount-1)">@(ViewBag.PageCount - 1)</a>
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="@ViewBag.PageCount">@ViewBag.PageCount</a>
        }
        else if (ViewBag.CurrentPage == ViewBag.PageCount - 1)
        {
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="1">1</a>
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="2">2</a>
            <a>...</a>
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="@(ViewBag.PageCount-2)">@(ViewBag.PageCount - 2)</a>
            <a class="btn btn-primary btn-sm">@(ViewBag.PageCount - 1)</a>
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="@ViewBag.PageCount">@ViewBag.PageCount</a>
        }
        else
        {
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="1">1</a>
            <a>...</a>
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage-1)">@(ViewBag.CurrentPage - 1)</a>
            <a class="btn btn-primary btn-sm">@(ViewBag.CurrentPage)</a>
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage+1)">@(ViewBag.CurrentPage + 1)</a>
            <a>...</a>
            <a class="btn btn-outline-primary btn-sm" asp-action="Index" asp-route-page="@ViewBag.PageCount">@ViewBag.PageCount</a>
        }
        if (ViewBag.CurrentPage != ViewBag.PageCount)//Nếu như kp trang cuối
        {
            <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage+1)">
                <i class="bi bi-arrow-right-circle-fill"></i>
            </a>
        }
    }
</div>